{
  "displayName": "Homepod mini radio support",
  "name": "@petro-kushchak/homebridge-homepod-radio",
  "version": "2.0.3",
  "description": "Homebridge accessory for streaming radio to Homepod mini",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/petro-kushchak/homebridge-homepod-radio.git"
  },
  "engines": {
    "node": ">=12.13.0",
    "homebridge": ">=1.3.0"
  },
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint src/**.ts --max-warnings=0",
    "watch": "npm run build && npm link && nodemon",
    "build": "rimraf ./dist && tsc && npm run copy",
    "copy": "cp bin/* dist",
    "test": "jest --forceExit --detectOpenHandles",
    "e2e": "npm run build && node dist/e2e/test_e2e.js",
    "prepublishOnly": "npm run lint && npm run build"
  },
  "keywords": [
    "homebridge-plugin",
    "homepod mini",
    "radio",
    "airplay",
    "airplay2",
    "pyatv"
  ],
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.31",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "eslint": "^7.21.0",
    "eslint-plugin-jest": "^24.3.1",
    "homebridge": "^1.3.1",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.3",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.2"
  },
  "dependencies": {
    "child_process": "^1.0.2"
  },
  "publishConfig": {
    "@petro-kushchak:registry": "https://registry.npmjs.org/"
  }
}
