    "url": "https://github.com/petro-kushchak/homebridge-homepod-radio.git"
  },
  "bugs": {
    "url": "https://github.com/petro-kushchak/homebridge-homepod-radio/issues"
  },
  "keywords": [
    "homebridge",
    "homebridge-plugin",
    "plugin",
    "homebridge plugin",
    "homepod",
    "homepod mini",
    "apple tv",
    "stream",
    "audio",
    "radio",
    "airplay",
    "airplay2",
    "pyatv"
  ],
  "main": "dist/index.js",
  "engines": {
    "node": "^18.20.4 || ^20.18.0 || ^22.10.0",
    "homebridge": "^1.8.0 || ^2.0.0-beta.0"
